#include <stdio.h>   
#define LEN_ARR 5     

int main()           
{
    int arr[LEN_ARR];  //declaring the integer array
    int *ptr=arr;      //assigning the adressing of array to a pointer
    int sum=0;         //intializing sum to 0
    printf("Enter the elements in the array:");
    for(int i=0;i<LEN_ARR;i++)  //for loop to scan elements from user
    scanf("%d",ptr+i);      //scanning array  elements from the user
    for(int i=0;i<LEN_ARR;i++)  //for loop to iterate over the array
     {
      if(i%2!=0)         //condition to check whether the index is odd
      sum=sum+*(ptr+i);  //assigning sum to sum+odd indexed value 
     }
    printf("Sum of odd indexed elements is:%d \n",sum);  
    return 0;
}

Output:
Enter the elements in the array:10 20 30 40 50
Sum of odd indexed elements is:60
